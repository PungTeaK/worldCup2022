<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.world_cup_2022.projectW.dao.IMyPageDAO">

    <!--마이페이지 맵퍼  -->
	
	<select id="detailViewMyPage" parameterType="string" 
	                  resultType="com.world_cup_2022.projectW.model.MemberVO">
	SELECT * FROM member WHERE memId = #{memId}
    </select>
	 
	
	 <!-- 회원 정보 수정 : 기본키인 memId는 수정하지 않음 -->
     <update id="updateMyPage"  parameterType="com.world_cup_2022.projectW.model.MemberVO">
  		UPDATE member
  		SET memName=#{memName}, memHP=#{memHP}, memEmail=#{memEmail},
  			   memZipcode=#{memZipcode}, memAddress1=#{memAddress1},memAddress2=#{memAddress2}
  	    WHERE memId=#{memId}
      </update>	
 </mapper>